{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}